.close-btn
	wh(24px)
	positionMix(13px, auto, absolute, 10, 0)
	cursor pointer
	opacity 0
	transition all .1s ease-in-out
	&:hover
		background rgba(255, 255, 255, .2)
.close-svg
	margin 6px 0 0 6px
	overflow hidden

.list__item
	.scale-animate
		transform rotate(-90deg) scale(0.7) !important




